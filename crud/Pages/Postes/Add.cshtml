@page
@model Crud.Pages.Postes.AddModel
@{
    var error_message = ViewData["Error"]?.ToString();
}

<form method="post">
    @if (!string.IsNullOrWhiteSpace(error_message))
    {
        <div class="alert alert-danger" role="alert">
            @error_message
        </div>
    }
    <h1>Add new Poste</h1>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Name Poste</label>
        <input type="text" class="form-control" asp-for="AddPosteRequest.NamePoste">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>