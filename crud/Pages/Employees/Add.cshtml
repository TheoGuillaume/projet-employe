@page
@model Crud.Pages.Employees.AddModel
@{
    var message = ViewData["Message"]?.ToString();
    var error_message = ViewData["Error"]?.ToString();
}

<form method="post">
    <h1>Add new Employee</h1>
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(error_message))
    {
        <div class="alert alert-danger" role="alert">
            @error_message
        </div>
    }
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="AddEmployeeRequest.Name">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="AddEmployeeRequest.Email">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="AddEmployeeRequest.Salary">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Date d'anniversaire</label>
        <input type="date" class="form-control" asp-for="AddEmployeeRequest.DateOfBirth">
    </div>
    <div class="mb-3">
        
        <input type="hidden" value="0" class="form-control" asp-for="AddEmployeeRequest.Solde">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Poste</label>
        <select class="form-select" asp-for="AddEmployeeRequest.PosteId" aria-label="Default select example">
            <option value="">Select a Poste</option>
            @if (Model.Postes != null)
            {
                @foreach (var poste in Model.Postes)
                {
                    <option value="@poste.Id">@poste.NamePoste</option>
                }
            }
        </select>
    </div>


    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Departement</label>
        <input type="text" class="form-control" asp-for="AddEmployeeRequest.Department">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
