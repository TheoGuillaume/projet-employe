@page
@model crud.Pages.transaction.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transaction.Id" />
            <div class="form-group">
                <label asp-for="Transaction.Motif" class="control-label"></label>
                <input asp-for="Transaction.Motif" class="form-control" />
                <span asp-validation-for="Transaction.Motif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.NombreJour" class="control-label"></label>
                <input asp-for="Transaction.NombreJour" class="form-control" />
                <span asp-validation-for="Transaction.NombreJour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.EmployeeId" class="control-label"></label>
                <select asp-for="Transaction.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="Transaction.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Status" class="control-label"></label>
                <select asp-for="Transaction.Status" class="form-control">
                    <option value="0">Nouveau 0</option>
                    <option value="1">Decliner</option>
                    <option value="2">Accepter</option>
                </select>
                <span asp-validation-for="Transaction.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
